
/**
 * handleSetenv - a function that handle shell setenv command
 * @arguments: arguments
 * @argv: arguments vector
 * @status: execution statues
 * @errIndeX: error number
 * Return: void
 */

void handleSetenv(char **arguments, char **argv, int status, int errIndeX)
{
	/*unsigned int i = 0;*/
	(void)status;

	if (arguments[1] && arguments[2])
	{
		/*getEnvPath(arguments[1]);*/
		if (setenv(arguments[1], arguments[2], 1) != 0)
		{
			handleError(argv[0], arguments[0], errIndeX);
			free2DArrayMemory(arguments);
		}
	}
	else
	{
		handleError(argv[0], arguments[0], errIndeX);
		free2DArrayMemory(arguments);
	}
}

/**
 * handleUnSetenv - a function that handle shell unsetenv command
 * @arguments: arguments
 * @argv: arguments vector
 * @status: execution statues
 * @errIndeX: error number
 * Return: void
 */

void handleUnSetenv(char **arguments, char **argv, int status, int errIndeX)
{
	/*unsigned int i = 0;*/
	(void)status;

	if (arguments[1])
	{
		if (unsetenv(arguments[1]) != 0)
		{
			handleError(argv[0], arguments[0], errIndeX);
			free2DArrayMemory(arguments);
		}
	}
	else
	{
		handleError(argv[0], arguments[0], errIndeX);
		free2DArrayMemory(arguments);
	}
}

/**
 * handleCd - a function that handle shell cd command
 * @arguments: arguments
 * @argv: arguments vector
 * @status: execution statues
 * @errIndeX: error number
 * Return: void
 */

void handleCd(char **arguments, char **argv, int status, int errIndeX)
{
	unsigned int i = 0;

	char *homePath = NULL;
	char pwd[512];
	size_t size = 0;

	(void)status;

	size = sizeof(pwd);

	if (arguments[1] == NULL || _strcmp(arguments[i], "-") == 0)
	{
		homePath = getEnv("HOME");
		if (homePath != NULL)
		{
			if (chdir(homePath) == 0)
			{
				if (getcwd(pwd, size))
					setenv("PWD", pwd, 1);
				else
				{
					handleError(argv[0], arguments[0], errIndeX);
					free2DArrayMemory(arguments);
					free1DArrayMemory(homePath);
				}
				free1DArrayMemory(homePath);
			}
		}
		else
		{
			handleError(argv[0], arguments[0], errIndeX);
			free2DArrayMemory(arguments);
		}
	}
	else
	{
		handleError(argv[0], arguments[0], errIndeX);
		free2DArrayMemory(arguments);
	}
}

